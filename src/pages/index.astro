    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --bg: #fafafa;
        --white: #ffffff;
        --black: #111111;
        --text: #333333;
        --text-secondary: #777777;
        --text-light: #aaaaaa;
        --border: #eeeeee;
        --accent: #e07a38;
        --accent-light: #fef3eb;
        --accent-dark: #c4622a;
        --card-shadow:
          0 1px 3px rgba(0, 0, 0, 0.04), 0 4px 12px rgba(0, 0, 0, 0.03);
        --card-shadow-hover:
          0 2px 8px rgba(0, 0, 0, 0.06), 0 8px 24px rgba(0, 0, 0, 0.06);
        --radius: 16px;
        --radius-sm: 10px;
      }

      body {
        background: var(--bg);
        color: var(--text);
        font-family:
          "Plus Jakarta Sans",
          -apple-system,
          sans-serif;
        min-height: 100vh;
        overflow-x: hidden;
        font-weight: 400;
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
      }

      /* NAV */
      .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1080px;
        margin: 0 auto;
        padding: 1.5rem 2rem;
      }

      .nav-name {
        font-weight: 600;
        font-size: 0.95rem;
        color: var(--black);
      }

      .nav-links {
        display: flex;
        align-items: center;
        gap: 1.5rem;
      }

      .nav-links a {
        font-size: 0.85rem;
        color: var(--text-secondary);
        text-decoration: none;
        transition: color 0.2s;
      }

      .nav-links a:hover {
        color: var(--black);
      }

      .nav-cta {
        background: var(--black) !important;
        color: var(--white) !important;
        padding: 0.5rem 1.2rem !important;
        border-radius: 100px;
        font-weight: 500 !important;
        font-size: 0.82rem !important;
        transition: opacity 0.2s !important;
      }

      .nav-cta:hover {
        opacity: 0.85 !important;
        color: var(--white) !important;
      }

      /* HERO */
      .hero {
        max-width: 1080px;
        margin: 0 auto;
        padding: 4rem 2rem 2rem;
      }

      .hero-headline {
        font-family: "Fraunces", serif;
        font-size: clamp(2.5rem, 5.5vw, 4rem);
        font-weight: 500;
        line-height: 1.15;
        letter-spacing: -0.03em;
        color: var(--black);
        font-optical-sizing: auto;
      }

      .hero-accent {
        font-style: italic;
        color: var(--accent);
      }

      .hero-meta {
        display: flex;
        align-items: center;
        justify-content: start;
        gap: 0.75rem;
        margin-top: 1.25rem;
        font-size: 0.9rem;
        color: var(--text-secondary);
      }

      .hero-icon {
        height: 2em;
        width: auto;
        vertical-align: middle;
        margin-left: 0.15rem;
        display: inline-block;
      }

      .hero-dot {
        color: var(--text-light);
      }

      .hero-url {
        color: var(--accent);
        text-decoration: none;
        font-weight: 500;
      }

      .hero-url:hover {
        text-decoration: underline;
      }

      /* BIO */
      .bio-section {
        max-width: 1080px;
        margin: 0 auto;
        padding: 2rem;
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
      }

      .bio-avatar {
        width: 128px;
        height: 128px;
        border-radius: 20%;
        object-fit: cover;
        flex-shrink: 0;
        border: 2px solid var(--border);
      }

      .bio-text {
        font-size: 0.95rem;
        color: var(--text);
        line-height: 1.7;
        max-width: 640px;
      }

      .bio-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 1rem;
      }

      .tag {
        display: inline-block;
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.3rem 0.75rem;
        border-radius: 100px;
        border: 1px solid var(--border);
        color: var(--text-secondary);
        background: var(--white);
      }

      /* PROJECTS COLUMN */
      .projects {
        max-width: 1080px;
        margin: 1rem auto 0;
        padding: 0 2rem 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .project-card {
        background: var(--white);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition:
          transform 0.3s cubic-bezier(0.23, 1, 0.32, 1),
          box-shadow 0.3s ease;
        box-shadow: var(--card-shadow);
      }

      .project-card:hover {
        box-shadow: var(--card-shadow-hover);
      }

      a.project-card:hover {
        transform: translateY(-3px);
      }

      /* BENTO GRID (interests + life) */
      .bento {
        max-width: 1080px;
        margin: 0 auto;
        padding: 0 2rem 2rem;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        grid-auto-rows: auto;
      }

      .card {
        background: var(--white);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition:
          transform 0.3s cubic-bezier(0.23, 1, 0.32, 1),
          box-shadow 0.3s ease;
        box-shadow: var(--card-shadow);
      }

      .card:hover {
        box-shadow: var(--card-shadow-hover);
      }

      a.card:hover {
        transform: translateY(-3px);
      }

      .card-tech {
        grid-column: span 3;
      }

      .card-browser {
        border-bottom: 1px solid var(--border);
      }

      .browser-bar {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.6rem 0.85rem;
        background: #f8f8f8;
        border-bottom: 1px solid var(--border);
      }

      .browser-dots {
        display: flex;
        gap: 5px;
      }

      .browser-dots span {
        width: 9px;
        height: 9px;
        border-radius: 50%;
        background: #ddd;
      }

      .browser-url {
        font-size: 0.72rem;
        color: var(--text-light);
        background: #f0f0f0;
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        flex: 1;
        text-align: center;
      }

      .browser-viewport {
        overflow: hidden;
        background: #f0f0f0;
      }

      .browser-img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.5s ease;
      }

      a.project-card:hover .browser-img {
        transform: scale(1.02);
      }

      .card-info {
        padding: 1.25rem;
      }

      .card-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
      }

      .card-label {
        font-size: 0.7rem;
        font-weight: 600;
        letter-spacing: 0.06em;
        text-transform: uppercase;
        color: var(--accent);
        background: var(--accent-light);
        padding: 0.2rem 0.6rem;
        border-radius: 100px;
      }

      .card-year {
        font-size: 0.75rem;
        color: var(--text-light);
      }

      .card-badge {
        font-size: 0.65rem;
        font-weight: 500;
        padding: 0.15rem 0.5rem;
        border-radius: 100px;
        border: 1px solid var(--border);
        color: var(--text-light);
      }

      .card-name {
        font-family: "Fraunces", serif;
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--black);
        margin-bottom: 0.35rem;
        letter-spacing: -0.02em;
      }

      .card-desc {
        font-size: 0.85rem;
        color: var(--text-secondary);
        line-height: 1.55;
        margin-bottom: 0.75rem;
      }

      .card-cta {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--accent);
        display: inline-block;
      }

      .card-cta.muted {
        color: var(--text-light);
        font-weight: 400;
      }

      /* ARBY PLACEHOLDER */
      .card-arby-placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 140px;
        background: linear-gradient(135deg, #f8f6f4, #f0ece6);
        border-bottom: 1px solid var(--border);
      }

      .lock-icon {
        width: 36px;
        height: 36px;
        color: #ccc;
      }

      /* TECH INTERESTS CARD */
      .card-tech {
        padding: 1.5rem;
      }

      .section-heading {
        font-family: "Fraunces", serif;
        font-size: 1.1rem;
        font-weight: 500;
        color: var(--black);
        margin-bottom: 1rem;
        letter-spacing: -0.01em;
      }

      .interest-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
      }

      .interest-chip {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem;
        border-radius: var(--radius-sm);
        border: 1px solid var(--border);
        transition:
          border-color 0.2s,
          background 0.2s;
      }

      .interest-chip:hover {
        border-color: #ddd;
        background: #fafafa;
      }

      .chip-icon {
        font-size: 1.5rem;
        flex-shrink: 0;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg);
        border-radius: 10px;
      }

      .chip-name {
        display: block;
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--black);
      }

      .chip-sub {
        display: block;
        font-size: 0.75rem;
        color: var(--text-light);
        margin-top: 0.1rem;
      }

      /* LIFE CARDS */
      .card-life {
        padding: 1.5rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 180px;
      }

      .life-icon {
        font-size: 2.5rem;
        margin-bottom: 0.75rem;
      }

      .life-icon-img {
        width: 48px;
        height: 48px;
        object-fit: contain;
        margin-bottom: 0.75rem;
        transform: rotate(45deg);
      }

      .life-name {
        font-family: "Fraunces", serif;
        font-size: 1rem;
        font-weight: 600;
        color: var(--black);
        margin-bottom: 0.35rem;
      }

      .life-desc {
        font-size: 0.78rem;
        color: var(--text-secondary);
        line-height: 1.5;
        max-width: 200px;
      }

      .card-padel {
        background: linear-gradient(160deg, #fff 60%, #f0f7f0);
      }
      .card-beer {
        background: linear-gradient(160deg, #fff 60%, #fef8f0);
      }
      .card-poker {
        background: linear-gradient(160deg, #fff 60%, #f0f0f8);
      }

      /* FOOTER */
      .footer {
        max-width: 1080px;
        margin: 0 auto;
        padding: 2rem;
      }

      .footer-inner {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border);
      }

      .footer-copy {
        font-size: 0.8rem;
        color: var(--text-light);
      }

      .footer-links {
        display: flex;
        gap: 1.5rem;
      }

      .footer-links a {
        font-size: 0.8rem;
        color: var(--text-secondary);
        text-decoration: none;
        transition: color 0.2s;
      }

      .footer-links a:hover {
        color: var(--black);
      }

      /* DESIGNS LINK */
      .designs-link {
        position: fixed;
        top: 1.5rem;
        right: 2rem;
        z-index: 100;
        font-size: 0.8rem;
        color: var(--text-light);
        text-decoration: none;
        transition: color 0.2s;
      }

      .designs-link:hover {
        color: var(--black);
      }

      /* ANIMATIONS */
      .hero {
        animation: up 0.7s cubic-bezier(0.23, 1, 0.32, 1) both;
      }
      .bio-section {
        animation: up 0.7s cubic-bezier(0.23, 1, 0.32, 1) 0.1s both;
      }

      .project-card,
      .card {
        animation: up 0.6s cubic-bezier(0.23, 1, 0.32, 1) both;
      }

      .project-card:nth-child(1) {
        animation-delay: 0.15s;
      }
      .project-card:nth-child(2) {
        animation-delay: 0.25s;
      }
      .project-card:nth-child(3) {
        animation-delay: 0.35s;
      }
      .card-tech {
        animation-delay: 0.4s;
      }
      .card-padel {
        animation-delay: 0.45s;
      }
      .card-beer {
        animation-delay: 0.5s;
      }
      .card-poker {
        animation-delay: 0.55s;
      }

      @keyframes up {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* RESPONSIVE */
      @media (max-width: 860px) {
        .bento {
          grid-template-columns: 1fr 1fr;
        }
        .card-tech {
          grid-column: span 2;
        }
      }

      @media (max-width: 640px) {
        .nav {
          padding: 1rem;
        }
        .nav-links a:not(.nav-cta) {
          display: none;
        }
        .hero {
          padding: 2.5rem 1.5rem 1.5rem;
        }
        .bio-section {
          padding: 1.5rem;
          flex-direction: column;
        }
        .projects {
          padding: 0 1.5rem 1.5rem;
        }
        .bento {
          grid-template-columns: 1fr;
          padding: 0 1.5rem 1.5rem;
        }
        .card-tech {
          grid-column: span 1;
        }
        .interest-grid {
          grid-template-columns: 1fr;
        }
        .hero-meta {
          flex-wrap: wrap;
        }
        .footer-inner {
