---
import Analytics from "@vercel/analytics/astro";
import { Image } from "astro:assets";
import HeadSEO from "@/components/HeadSEO.astro";
import ExternalLinkLabel from "@/components/ExternalLinkLabel.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader } from "@/components/ui/card";
import { Separator } from "@/components/ui/separator";
import pricefxImg from "@/assets/pricefx.png";
import meSquareImg from "@/assets/me-square.png";
import mrtrestleImg from "@/assets/mrtrestle-screenshot.png";
import coinStackerImg from "@/assets/coin-stacker.png";
import arbyDashImg from "@/assets/arby-dash.png";
import padelImg from "@/assets/padel-racquet.png";
import { Logos } from "@/components/icons/Logo";
import TechStackIcons, {
  BUN,
  NEXT_JS,
  PLAYWRIGHT,
  POSTHOG,
  REDIS,
  TAILWIND,
  TURSO,
  VERCEL,
  VULTR,
} from "@/components/TechStackIcons";
---

<html lang="en">
  <head>
    <HeadSEO
      title="Simon Bechard - Fullstack Developer"
      description="Fullstack developer portfolio for Simon Bechard."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500&family=Fraunces:ital,opsz,wght@0,9..144,300;0,9..144,400;0,9..144,500;0,9..144,600;0,9..144,700;1,9..144,300;1,9..144,400;1,9..144,500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen overflow-x-hidden bg-[#fafafa] text-[#333] antialiased font-['Plus_Jakarta_Sans',-apple-system,sans-serif]"
  >
    <nav
      class="mx-auto flex w-full max-w-3xl items-center justify-between px-4 py-4 sm:px-8 sm:py-6"
    >
      <span class="text-[0.95rem] font-semibold text-[#111]">Simon Bechard</span
      >
      <div class="flex items-center gap-6">
        <a
          href="https://github.com/simbesh"
          target="_blank"
          rel="noopener"
          class="hidden text-[0.85rem] text-[#777] transition-colors hover:text-[#111] sm:inline"
          >GitHub</a
        >
        <a
          href="https://www.linkedin.com/in/simon-bechard-237470196/"
          target="_blank"
          rel="noopener"
          class="hidden text-[0.85rem] text-[#777] transition-colors hover:text-[#111] sm:inline"
          >LinkedIn</a
        >
        <a href="mailto:simon@bechard.dev">
          <Button
            className="h-auto rounded-full bg-[#111] px-5 py-2 text-[0.82rem] font-medium text-white hover:bg-[#111]/85"
            >Get in touch</Button
          >
        </a>
      </div>
    </nav>

    <main>
      <section
        class="mx-auto max-w-3xl px-6 pb-8 pt-10 sm:px-8 sm:pb-8 sm:pt-16 animate-[up_0.7s_cubic-bezier(0.23,1,0.32,1)_both]"
      >
        <h1
          class="text-[clamp(2.5rem,5.5vw,4rem)] leading-[1.15] tracking-[-0.03em] text-[#111] font-['Fraunces',serif]"
